exec 1>&2 # Send any output to stderr, to not alter the action response protocol
set -e

ovpn_udp_port=$(echo $TCP_PORTS | cut -d',' -f1)
api_port=$(echo $TCP_PORTS | cut -d',' -f2)
ui_port=$(echo $TCP_PORTS | cut -d',' -f3)
proxy_port=$(echo $TCP_PORTS | cut -d',' -f4)
promtail_port=$(echo $TCP_PORTS | cut -d',' -f5)
num=$(echo $MODULE_ID | sed 's/nextsec\-controller//')

secret=$(uuidgen | sha256sum | awk '{print $1}')

cat << EOF > network.env
OVPN_UDP_PORT=$ovpn_udp_port
OVPN_TUN=nsc$num
API_PORT=$api_port
API_BIND_IP=127.0.0.1
UI_PORT=$ui_port
UI_BIND_IP=127.0.0.1
PROXY_PORT=$proxy_port
PROXY_BIND_UI=127.0.0.1
EOF

cat << EOF > secret.env
API_SECRET=$secret
EOF

loki_instance=$(redis-cli --raw GET cluster/default_instance/loki)
loki_addr=$(redis-cli --raw HGET module/"$loki_instance"/environment LOKI_ADDR)
loki_port=$(redis-cli --raw HGET module/"$loki_instance"/environment LOKI_HTTP_PORT)
loki_bearer=$(redis-cli --raw HGET module/"$loki_instance"/environment LOKI_LOGS_INGRESS_TOKEN)

cat << EOF > promtail.yml
server:
  disable: true

clients:
  - url: http://$loki_addr:$loki_port/loki/api/v1/push
    bearer_token: $loki_bearer

positions:
  filename: /tmp/positions.yaml

scrape_configs:
  - job_name: syslog
    syslog:
      listen_address: 127.0.0.1:$promtail_port
      labels:
        job: "syslog"
    relabel_configs:
      - source_labels: ['__syslog_message_hostname']
        target_label: 'host'
EOF
