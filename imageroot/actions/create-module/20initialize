exec 1>&2 # Send any output to stderr, to not alter the action response protocol
set -e

ovpn_udp_port=$(echo $TCP_PORTS | cut -d',' -f1)
ovpn_mgmt_port=$(echo $TCP_PORTS | cut -d',' -f2)
api_port=$(echo $TCP_PORTS | cut -d',' -f3)
ui_port=$(echo $TCP_PORTS | cut -d',' -f4)

cat << EOF > network.env
OVPN_UDP_PORT=$ovpn_udp
OVPN_MGMT_PORT=$ovpn_mgmt_port
API_PORT=$api_port
UI_PORT=$ui_port
UI_BIND_IP=127.0.0.1
EOF
